<link rel="stylesheet" href="/style.css">

<h1>Blog</h1>

<a href="/">Home</a>
<a href="/new-article">Add New Article</a>

<% articles.forEach(function(article) { %>
    <% const imgIndex = Math.floor(Math.random() * 100) % 4 + 1 %>
        <% const imgName = imgIndex + ".jpg" %>
            <article id="<%= article.id %>">
                <h2>
                    <%= article.title %>
                </h2>
                <p>
                    <%= article.content %>
                </p>

                <img src="img/<%= imgName %>" width="200px">
                <a href="/article/<%= article.id %>">Edit</a>
                <form method="POST" action="/article/<%= article.id %>?_method=DELETE">
                    <button type="submit">Delete</button>
                </form>
            </article>
            <% }); %>